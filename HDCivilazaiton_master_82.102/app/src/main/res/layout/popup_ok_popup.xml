<?xml version="1.0" encoding="utf-8"?>
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >

    <LinearLayout
        android:background="@drawable/btn_send_comment_rect"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/edge_padding_left">

        <TextView
            android:id="@+id/warning_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="@string/is_login_out"
            android:textColor="@color/gry_black"
            android:textSize="@dimen/popup_warning" />


        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_send_comment_selector"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="我知道了"
            android:textColor="@color/gry_black"
            android:textSize="@dimen/btn_send_comment" />
    </LinearLayout>
</LinearLayout>