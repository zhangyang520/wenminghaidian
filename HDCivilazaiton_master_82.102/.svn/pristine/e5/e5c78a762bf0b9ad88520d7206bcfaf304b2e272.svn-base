<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="20dp">

    <LinearLayout
        android:id="@+id/user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_pic"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/ll_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_userPermision"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="#82a2b9"
                    android:textSize="@dimen/comment_item_title" />


                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#7a7a7a"
                    android:textSize="@dimen/comment_item_title" />

            </LinearLayout>

            <TextView
                android:id="@+id/comment_detail_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_one"
                android:layout_marginLeft="10dp"
                android:textColor="#bfbfbf"
                android:textSize="11sp" />

        </RelativeLayout>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_lauout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_info"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="5dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#545454"
            android:textSize="@dimen/comment_item_content" />


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/totle_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/comment_content"
            android:layout_marginTop="15dp"
            android:background="#f8f8f8"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:id="@+id/comment_list_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:background="@null"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/userPermiession_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9db7c6"
                    android:textSize="@dimen/comment_item_content" />

                <TextView
                    android:id="@+id/userPermiession_one_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#9db7c6"
                    android:textSize="@dimen/comment_item_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="："
                    android:textColor="#9db7c6"
                    android:textSize="@dimen/comment_item_content" />

                <TextView
                    android:id="@+id/userPermiession_one_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#545454"
                    android:textSize="@dimen/comment_item_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/comment_list_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:background="@null"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/userPermiession_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9db7c6"
                    android:textSize="@dimen/comment_item_content" />

                <TextView
                    android:id="@+id/userPermiession_two_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#9db7c6"
                    android:textSize="@dimen/comment_item_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="："
                    android:textColor="#9db7c6"
                    android:textSize="@dimen/comment_item_content" />

                <TextView
                    android:id="@+id/userPermiession_two_conetent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#545454"
                    android:textSize="@dimen/comment_item_content" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/comment_list_thress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/userPermiession_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9db7c6"
                    android:textSize="@dimen/comment_item_content" />

                <TextView
                    android:id="@+id/userPermiession_three_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#9db7c6"
                    android:textSize="@dimen/comment_item_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="："
                    android:textColor="#9db7c6"
                    android:textSize="@dimen/comment_item_content" />

                <TextView
                    android:id="@+id/userPermiession_three_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#545454"
                    android:textSize="@dimen/comment_item_content" />

            </LinearLayout>

            <TextView
                android:id="@+id/totalCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:background="@null"
                android:layout_marginLeft="5dp"
                android:textColor="#9db7c6" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_lauout"
        android:layout_marginTop="20dp"
        android:background="@color/supervise_mysubmit_line_color" />

</RelativeLayout>
