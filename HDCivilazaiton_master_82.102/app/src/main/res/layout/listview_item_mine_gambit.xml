<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/tv_mine_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="创建全国文明城区 争当海淀文明"
            android:textColor="@color/comment_hot_title"
            android:textSize="@dimen/civi_comment_title_size" />

        <TextView
            android:id="@+id/tv_mine_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mine_title"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="3"
            android:text="为建设环境优美、和谐宜居的高科技核心区域改善市民的生活环境，提升市民的生活质量和幸福指数，海淀区委、区政府决定举区域之力重点加强文明建设的核心任务"
            android:textColor="@color/comment_hot_content"
            android:textSize="@dimen/civi_comment_content_size" />


        <LinearLayout
            android:id="@+id/ll_img_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mine_content"
            android:layout_marginTop="7dp">

            <ImageView
                android:id="@+id/mine_img_1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginRight="@dimen/gridview_column_space"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/mine_img_2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginRight="@dimen/gridview_column_space"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/mine_img_3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_img_list"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:visibility="gone"
            android:layout_alignBottom="@id/ll_img_list"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="3dp"
            android:background="#6f000000"
            android:gravity="center_vertical">


            <ImageView
                android:id="@+id/img_list_logo_"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/img_list_logo" />


            <TextView
                android:id="@+id/tv_img_list_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/img_list_logo_"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/bottom_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_img_list"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mien_user_id_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="文明志愿者"
                    android:textColor="@color/comment_hot_userid"
                    android:textSize="@dimen/civi_comment_user_name_size" />

                <TextView
                    android:id="@+id/mine_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:clickable="true"
                    android:text="李娜"
                    android:textColor="@color/comment_hot_name"
                    android:textSize="@dimen/civi_comment_user_name_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="赞"
                    android:textColor="@color/comment_hot_zanortime"
                    android:textSize="@dimen/civi_comment_zan_size" />

                <TextView
                    android:id="@+id/mine_gambit_zambia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/comment_hot_zanortime"
                    android:textSize="@dimen/civi_comment_zan_size" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                >

                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评论"
                    android:textColor="@color/comment_hot_zanortime"
                    android:textSize="@dimen/civi_comment_zan_size" />

                <TextView
                    android:id="@+id/hot_gambit_comment_nummber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/comment_hot_zanortime"
                    android:layout_toRightOf="@id/tv_comment"
                    android:textSize="@dimen/civi_comment_zan_size" />

                <!--红色背景-->
                <View
                    android:id="@+id/view_red_number"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:background="@drawable/red_comment_number"
                    android:layout_toRightOf="@id/hot_gambit_comment_nummber"
                    ></View>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/mine_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/bottom_ll"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="16dp"
            android:text="14:43"
            android:textColor="@color/comment_hot_zanortime"
            android:textSize="@dimen/civi_comment_time_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignTop="@id/bottom_ll"
            android:layout_marginTop="40dp"
            android:background="#d8d8d8" />
    </RelativeLayout>
</LinearLayout>
