<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background_color">

    <com.zhjy.hdcivilization.view.SimpleSwipeRefreshLayout
        android:id="@+id/hot_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhjy.hdcivilization.view.LoadMoreRecyclerView
            android:id="@+id/hot_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="@dimen/edge_padding_left"
            android:paddingRight="@dimen/edge_padding_left"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbarThumbVertical="@drawable/temp_scrollbars_outside_1"
            android:scrollbars="vertical" />

    </com.zhjy.hdcivilization.view.SimpleSwipeRefreshLayout>

</FrameLayout>
