<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebf8ff"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title_backround_color">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/back_height"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/btn_back"
                style="@style/TitleLeftBtn"
                android:background="@null"
                android:contentDescription="@string/empty_space"
                android:src="@drawable/btn_back_selector" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/text_size_setting"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/title_text_size" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_large"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_item"
        android:background="@drawable/btn_shape_mine_bg_selector"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/mine_img_apply_check"
            android:text="@string/large"
            android:textColor="@color/mine_item_txt"
            android:textSize="@dimen/mine_item_txt_size" />

        <ImageView
            android:id="@+id/arrow_large"
            android:layout_width="@dimen/mine_arrow_wight"
            android:layout_height="@dimen/mine_arrow_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:background="@drawable/mine_arrow_right" />
    </RelativeLayout>

    <View
        android:id="@+id/text_size_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="#d8d8d8" />

    <RelativeLayout
        android:id="@+id/rl_in_large"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_item"
        android:background="@drawable/btn_shape_mine_bg_selector"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/mine_img_apply_check"
            android:text="@string/in_layge"
            android:textColor="@color/mine_item_txt"
            android:textSize="@dimen/mine_item_txt_size" />

        <ImageView
            android:id="@+id/arrow_in_large"
            android:layout_width="@dimen/mine_arrow_wight"
            android:layout_height="@dimen/mine_arrow_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:background="@drawable/mine_arrow_right" />
    </RelativeLayout>

    <View
        android:id="@+id/text_size_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="#d8d8d8" />

    <RelativeLayout
        android:id="@+id/rl_small"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_item"
        android:background="@drawable/btn_shape_mine_bg_selector"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/mine_img_apply_check"
            android:text="@string/small"
            android:textColor="@color/mine_item_txt"
            android:textSize="@dimen/mine_item_txt_size" />

        <ImageView
            android:id="@+id/arrow_small"
            android:layout_width="@dimen/mine_arrow_wight"
            android:layout_height="@dimen/mine_arrow_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:background="@drawable/mine_arrow_right" />
    </RelativeLayout>



</LinearLayout>
