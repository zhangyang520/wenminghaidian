<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/edge_padding_left">

    <!--
      图片的展示
    -->
    <EditText
        android:id="@+id/ed_send_comment"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/btn_send_comment_rect"
        android:focusable="true"
        android:gravity="start"
        android:paddingBottom="12dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="12dp"
        android:singleLine="false"
        android:textColor="@color/gry_black"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="@dimen/send_comment_content" />

    <Button
        android:id="@+id/btn_send_comment"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ed_send_comment"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_send_comment_selector"
        android:text="发表"
        android:textColor="@color/gry_black"
        android:textSize="@dimen/btn_send_comment"></Button>
</RelativeLayout>