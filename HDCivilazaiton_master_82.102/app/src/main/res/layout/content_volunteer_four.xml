<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/volunteer_item_margin_top"
    android:paddingRight="@dimen/edge_padding_left"
    android:paddingLeft="@dimen/edge_padding_left"
    android:id="@+id/rl_scroll_four"
    >

    <RelativeLayout
        android:id="@+id/volunteer_content_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/volunteer_bg"
        android:clickable="true"
        >

        <ImageView
            android:id="@+id/iv_dot"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/volunteer_spot_bg"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:text="@string/content_volunteer_four"
            android:textColor="@color/white"
            android:textSize="@dimen/volunteer_item_title"
            android:layout_toRightOf="@+id/iv_dot"
            android:layout_centerVertical="true"
            />

        <ImageButton
            android:id="@+id/volunteer_arrow_four"
            android:layout_width="@dimen/volunteer_arrow_width"
            android:layout_height="@dimen/volunteer_arrow_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/volunteer_arrow_selector" />

    </RelativeLayout>

    <TextView
        android:id="@+id/volunteer_four_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/volunteer_txt_margin_top"
        android:text="@string/test_text4"
        android:textColor="@color/volunteer_signup_txt_color"
        android:textSize="@dimen/volunteer_item_content"
        android:lineSpacingMultiplier="1.25"
        android:layout_below="@+id/volunteer_content_four"
        />

    <View
        android:layout_alignParentBottom="true"
        android:background="@color/volunteer_signup_line_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/volunteer_item_margin_top"
        android:visibility="invisible"
        android:layout_below="@+id/volunteer_four_content"
        />
</RelativeLayout>
