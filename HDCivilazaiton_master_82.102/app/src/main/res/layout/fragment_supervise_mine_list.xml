<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background_color"
    tools:context="com.zhjy.hdcivilization.fragment.SuperviseMineListFragment">

    <com.zhjy.hdcivilization.view.SimpleSwipeRefreshLayout
        android:id="@+id/simple_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhjy.hdcivilization.view.LoadMoreRecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbarThumbVertical="@drawable/temp_scrollbars_outside_1"
            android:scrollbars="vertical"></com.zhjy.hdcivilization.view.LoadMoreRecyclerView>
    </com.zhjy.hdcivilization.view.SimpleSwipeRefreshLayout>

</FrameLayout>
