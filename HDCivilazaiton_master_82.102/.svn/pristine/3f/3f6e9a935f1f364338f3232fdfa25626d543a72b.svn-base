<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/volunteer_sign_up_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:background="@color/title_backround_color">

                <RelativeLayout
                    android:id="@+id/rl_back"
                    android:layout_width="@dimen/back_height"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/btn_back"
                        style="@style/TitleLeftBtn"
                        android:background="@null"
                        android:contentDescription="@string/empty_space"
                        android:src="@drawable/btn_back_selector" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/title_volunteer_sign_up"
                    android:textColor="@color/title_text_color"
                    android:textSize="@dimen/title_text_size" />

            </RelativeLayout>

            <TextView
                android:textColor="@color/gambit_sub_title_hint"
                android:layout_gravity="center_horizontal"
                android:text="所有信息我们将严格保密，请您放心填写"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


                <LinearLayout
                    android:id="@+id/ll_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/volunteer_item_height"
                    android:layout_marginLeft="@dimen/margin_left_"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/volunteer_form_name"
                        android:textColor="@color/comment_hot_title"
                        android:textSize="@dimen/volunteer_item_title1" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/supervise_must" />

                    <EditText
                        android:maxLength="4"
                        android:id="@+id/edit_name"
                        style="@style/EditSignUp" />

                </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="13dp"
                android:background="@color/supervise_mysubmit_line_color" />



                <LinearLayout
                    android:id="@+id/ll_identity"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/volunteer_item_height"
                    android:layout_marginLeft="@dimen/margin_left_"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/volunteer_identity_number"
                        android:textColor="@color/comment_hot_title"
                        android:textSize="@dimen/volunteer_item_title1" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/supervise_must" />

                    <EditText
                        android:id="@+id/edit_identity_number"
                        android:maxLength="18"
                        style="@style/EditSignUp" />

                </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="13dp"
                android:background="@color/supervise_mysubmit_line_color" />


                <LinearLayout
                    android:id="@+id/ll_address"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/volunteer_item_height"
                    android:layout_marginLeft="@dimen/margin_left_"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/volunteer_address_detail"
                        android:textColor="@color/comment_hot_title"
                        android:textSize="@dimen/volunteer_item_title1" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/supervise_must" />

                    <EditText
                        android:textColorHint="@color/gambit_sub_title_hint"
                        android:hint="填写家庭或工作地址"
                        android:id="@+id/edit_address_deatail"
                        style="@style/EditSignUp" />

                </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="13dp"
                android:background="@color/supervise_mysubmit_line_color" />


            <RelativeLayout
                android:id="@+id/rl_experience"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_left_"
                android:layout_marginTop="15dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/volunteer_experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/volunteer_experience"
                    android:textColor="@color/comment_hot_title"
                    android:textSize="@dimen/volunteer_item_title1" />

                <ImageView
                    android:visibility="gone"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@id/volunteer_experience"
                    android:background="@drawable/supervise_must" />


                <EditText
                    android:id="@+id/edit_experience_detail"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/volunteer_experience"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:gravity="top|left"
                    android:textSize="@dimen/volunteer_item_expersion"
                    android:hint="点击输入描述"
                    android:textColor="@color/comment_hot_title"
                    android:textColorHint="@color/gambit_sub_title_hint"
                    android:textCursorDrawable="@drawable/color_cursor" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="10dp"
                android:background="@color/supervise_mysubmit_line_color" />


            <RelativeLayout
                android:id="@+id/rl_portrait"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_left_"
                android:layout_marginTop="5dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/volunteer_img_load"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/volunteer_img_load"
                    android:textColor="@color/comment_hot_title"
                    android:textSize="@dimen/volunteer_item_title1" />

                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/volunteer_img_load"
                    android:background="@drawable/supervise_must" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_marginRight="13dp"
                    android:layout_below="@+id/volunteer_img_load"
                    android:layout_width="match_parent"
                    android:layout_height="110dp">

                    <!--android:src="@drawable/hand_img"-->
                    <ImageView
                        android:id="@+id/hand_img_"
                        android:layout_width="0dp"
                        android:clickable="true"
                        android:layout_weight="1"
                        android:src="@drawable/hand_img_"
                        android:layout_marginRight="10dp"
                        android:layout_height="match_parent" />

                    <!-- android:src="@drawable/hand_img_bg"-->
                    <ImageView
                        android:id="@+id/hand_img_bg"
                        android:layout_width="0dp"
                        android:clickable="true"
                        android:layout_weight="1"
                        android:src="@drawable/hand_img_bg"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </RelativeLayout>


                <LinearLayout
                    android:id="@+id/ll_bank_num"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/volunteer_item_height"
                    android:layout_marginLeft="@dimen/margin_left_"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/volunteer_bank"
                        android:textColor="@color/comment_hot_title"
                        android:textSize="@dimen/volunteer_item_title1" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/supervise_must" />

                    <EditText
                        android:hint="北京银行"
                        android:textColor="@color/comment_hot_title"
                        android:textColorHint="@color/gambit_sub_title_hint"
                        android:id="@+id/edit_bank_code"
                        style="@style/EditSignUp" />

                </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="13dp"
                android:background="@color/supervise_mysubmit_line_color" />


                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_weixin"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/volunteer_item_height"
                    android:layout_marginLeft="@dimen/margin_left_"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/volunteer_weixin"
                        android:textColor="@color/comment_hot_title"
                        android:textSize="@dimen/volunteer_item_title1" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/supervise_must" />

                    <EditText
                        android:id="@+id/edit_weixin"
                        style="@style/EditSignUp" />

                </LinearLayout>

            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="13dp"
                android:background="@color/supervise_mysubmit_line_color" />


                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_zhifubao"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/volunteer_item_height"
                    android:layout_marginLeft="@dimen/margin_left_"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/volunteer_pay"
                        android:textColor="@color/comment_hot_title"
                        android:textSize="@dimen/volunteer_item_title1" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/supervise_must" />

                    <EditText
                        android:id="@+id/edit_pay"
                        style="@style/EditSignUp" />

                </LinearLayout>

            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="13dp"
                android:background="@color/supervise_mysubmit_line_color" />

            <Button
                android:id="@+id/sub_sign_info"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="@dimen/margin_left_"
                android:layout_marginRight="@dimen/margin_left_"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_shape_login_selector"
                android:text="提交"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
